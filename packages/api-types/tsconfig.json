{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true, // 如果你使用的是 project references
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false, // 设置为 true 仅生成类型定义
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
